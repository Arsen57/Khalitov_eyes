<Window x:Class="Khalitov_глазки.PriorityEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Khalitov_глазки"
        mc:Ignorable="d"
        Title="Изменение приоритета" FontFamily="Tw Cen MT" MinHeight="150" 
        MaxHeight="150" MinWidth="250" MaxWidth="400" 
        Icon="Images\Глазки-save.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="Приоритет" FontSize="15" Height="20" Width="100" Margin="5"></TextBlock>
            <TextBox Name="PriorityBox" Text="" FontSize="15" Height="20" Width="100"></TextBox>
        </StackPanel>
        <Button Name="PriorityEditButton" Content="Изменить приоритет" 
                Grid.Row="1" Width="200" FontSize="18" Click="PriorityEditButton_Click"></Button>
    </Grid>
</Window>
